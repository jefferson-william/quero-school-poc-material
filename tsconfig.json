{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "extensions": {
    "**/*.ts": "TS",
    "**/*.es": "JS",
    "**/*.js": "TS"
  },
  "extends": "./tspaths.json",
  "include": [
    "src",
    "public"
  ],
  "exclude": [
    "node_modules"
  ],
  "linterOptions": {
    "exclude": [
      "./src/serviceWorker.ts"
    ]
  }
}
